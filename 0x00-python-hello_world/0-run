#!/bin/bash
# This script runs a Python script whose filename is stored in the environment variable $PYFILE

# Check if $PYFILE is set
if [ -z "$PYFILE" ]; then
echo "Error: Environment variable PYFILE is not set"
exit 1
fi

# Check if the file exists
if [ ! -f "$PYFILE" ]; then
echo "Error: File $PYFILE does not exist"
exit 1
fi

# Run the Python script
python3 "$PYFILE"
